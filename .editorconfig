##########################################
#  ALAN Internationalization Project     #
#  https://github.com/alan-if/alan-i18n  #
##########################################

root = true

## ALAN Related Files
#####################

# ALAN sources and solution files (edited):
[*.{alan,i,a3s}]
charset = unset
end_of_line = unset
indent_style = space
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true

# ALAN transcripts (generated:
[*.a3t]
charset = unset
end_of_line = unset
indent_style = space
indent_size = unset
trim_trailing_whitespace = unset
insert_final_newline = unset


## Repository Configurations
############################
[.{git*,editorconfig,*.yml}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true

[.gitmodules]
indent_style = tab


## Markdown GFM
###############
[*.md]
charset = utf-8
end_of_line = unset
indent_style = space
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true


## Shell Scripts
################
[*.sh]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true


## Plain-Text Files
###################
[*.txt]
charset = utf-8
end_of_line = unset
indent_style = space
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true


[LICENSE]
charset = utf-8
end_of_line = unset
indent_style = space
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true

# EOF #
